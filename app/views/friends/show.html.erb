<div class="jumbotron">
  <h1 class="display-4"><%= @friend.first_name %></h1>
  <p class="lead">
    <%= @friend.email %> |
    <%= @friend.phone %> |
    <%= @friend.twitter %></p>
  <hr class="my-4">
  <div>
    <%= link_to 'Back', friends_path, class: 'btn btn-primary' %>
    <%= link_to 'Edit', edit_friend_path(@friend), class: 'btn btn-info' %>
    <%= link_to 'Delete', @event,
                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                class: 'btn btn-danger' %>
  </div>
</div>


