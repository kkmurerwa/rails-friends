<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <%= f.label :email, class:"margin-bottom-5" %><br />
    <%= f.email_field :email, class:"form-control margin-bottom-10", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field form-group">
    <%= f.label :password, class:"margin-bottom-5" %><br />
    <%= f.password_field :password, class:"form-control margin-bottom-10", autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field form-group margin-bottom-10">
      <%= f.check_box :remember_me, class:"form-check-input" %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-primary margin-bottom-10"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
